{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "api",
    "moduleResolution": "node"
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
}
